<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="ProjectSquishyDBconnect">
		<properties>

			<!-- Scan for annotated classes and Hibernate mapping XML files -->
			<property name="hibernate.archive.autodetection" value="class, hbm" />

			<!-- SQL stdout logging -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />

			<!-- SQL dialect -->
			<property name="hibernate.dialect" value = "org.hibernate.dialect.MySQL5Dialect"/>

			<!-- Connection config -->
			<property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver" />
			<property name="hibernate.connection.url" value = "jdbc:mysql://119.18.39.248:3306/project"/>
			<property name="hibernate.connection.username" value="Matt" />
			<property name="hibernate.connection.password" value="Blake" />


			<!--Added from SO-->
			<!--<property name="hibernate.enable_lazy_load_no_trans" value="true"/>-->

			<!-- validate, create, create-drop, update -->
			<!--<property name="hibernate.hbm2ddl.auto" value="create" /> &lt;!&ndash; remove this once once DB tables are created &ndash;&gt;-->

			<!-- Connection pooling config -->
			<property name="hibernate.c3p0.min_size" value="2" />
			<property name="hibernate.c3p0.max_size" value="3" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.idle_test_period" value="3000" />
		</properties>
	</persistence-unit>

</persistence>